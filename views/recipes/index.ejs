<%- include('../partials/header') %>
<body>
    <h1>Recipes</h1>
    <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Ingredients</th>
            <th>Difficulty</th>
            <th>Allergies</th>
            <th>Cooking Instructions</th>
          </tr>
        </thead>
        <tbody>
            <% recipes.forEach(function(r) { %>
                <tr>
                <td><%= r.recipeName%></td>
                <td><%= r.ingredients%></td>
                <td><%= r.difficult%></td>
                <td><%= r.allergies? 'Yes' : 'Nope'%></td>
                <td><%= r.cookingInstructions%></td>
                </tr>
                <% }); %>
        </tbody>
    </table>

<%- include('../partials/footer') %>