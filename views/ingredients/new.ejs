<%- include('../partials/header') %>

<div>Before adding, please ensure that the ingredient is not already on the list:</div>
<section id="badge-container">
  <% ingredients.forEach(function(i) { %>
    <article class="badge"><%= i.name %></article>
  <% }) %>
</section>

<form id="add-ingredient-form" action="/ingredients" method="POST">
  <label>Name:</label>
  <input type="text" name="name">
  <input type="submit" value="Add Ingredient">
</form>

<%- include('../partials/footer') %>